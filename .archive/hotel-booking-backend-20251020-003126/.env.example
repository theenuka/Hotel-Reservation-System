# Copy this file to .env and fill in the values before running the server
# MongoDB connection string (required)
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/hotel-booking

# Optional: Port the server should listen on
PORT=7002

# Cloudinary credentials (required only if you upload images)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Frontend URL(s) allowed by CORS (optional)
FRONTEND_URL=http://localhost:5174

# Notification service (optional, defaults to http://localhost:7101)
NOTIFICATION_SERVICE_URL=http://localhost:7101

# NODE_ENV=development
