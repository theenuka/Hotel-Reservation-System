# Shared environment for docker-compose (safe sample values)
NODE_ENV=production
FRONTEND_URL=http://localhost:4173
MONGODB_CONNECTION_STRING=mongodb://mongo:27017/hotel-booking
JWT_SECRET_KEY=replace-me
ALLOW_ROLE_FROM_REGISTER=true
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL_DAYS=30
PASSWORD_RESET_TOKEN_TTL_MINUTES=60
VERIFICATION_CODE_TTL_MINUTES=15
REQUIRE_VERIFIED_EMAIL_FOR_LOGIN=false
LOYALTY_POINTS_PER_CURRENCY=0.1

# Internal service auth
INTERNAL_SERVICE_API_KEY=local-internal-key
NOTIFICATION_SERVICE_KEY=local-internal-key

# External APIs (optional)
STRIPE_API_KEY=
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
TWILIO_MESSAGING_SERVICE_SID=

# Notification defaults
NOTIFICATION_FROM_EMAIL=no-reply@phoenix-booking.local
NOTIFICATION_FROM_NAME=Phoenix Booking
NOTIFICATION_QUEUE_MODE=queue
NOTIFICATION_QUEUE_NAME=notification-jobs
NOTIFICATION_DISABLE_AUTH=false
NOTIFICATION_ALLOWED_ORIGINS=http://localhost:4173
REDIS_URL=redis://redis:6379/0

# Service discovery inside the Docker network
NOTIFICATION_SERVICE_URL=http://notification-service:7101
IDENTITY_SERVICE_URL=http://identity-service:7102
HOTEL_SERVICE_URL=http://hotel-service:7103
BOOKING_SERVICE_URL=http://booking-service:7104
SEARCH_SERVICE_URL=http://search-service:7105

# Optional Cloudinary (leave empty for local-only image URLs)
CLOUDINARY_URL=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
